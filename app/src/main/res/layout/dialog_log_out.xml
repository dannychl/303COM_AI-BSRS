<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivLogout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/logout"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/tvLogout"
        app:layout_constraintBottom_toBottomOf="@id/tvLogout"
        app:layout_constraintEnd_toStartOf="@id/tvLogout"/>

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="22dp"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divisionline"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvLogout"/>

    <TextView
        android:id="@+id/tvExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Now?"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/tvLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>