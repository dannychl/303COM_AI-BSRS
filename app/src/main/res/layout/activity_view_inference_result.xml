    <ImageView
        android:id="@+id/imgUpload"
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTotalOfBreadDetected"/>


    <ImageView
        android:id="@+id/ivTotalOfBreadDetected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:src="@drawable/totalbreaddetectedbg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTotalOfBreadDetected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Total of Bread Detected: "
        android:textColor="#000000"
        android:textSize="16dp"
        android:gravity="center"
        android:textStyle="italic"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="@id/ivTotalOfBreadDetected"
        app:layout_constraintStart_toStartOf="@id/ivTotalOfBreadDetected"
        app:layout_constraintTop_toTopOf="@id/ivTotalOfBreadDetected"
        app:layout_constraintEnd_toEndOf="@id/ivTotalOfBreadDetected"/>


    <TextView
        android:id="@+id/tvResults"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Start your scan by\n (Upload image from gallery or take a photo)"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/ivProceedCheckOut"
        android:textSize="16dp"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/ivProceedCheckOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/proceedcheckoutbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>