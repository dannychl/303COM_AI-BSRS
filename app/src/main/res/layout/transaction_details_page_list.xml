<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivDivisionLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ivdivisiontransaction"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintTop_toBottomOf="@id/tvTransactionBreadName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tvTransactionBreadName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Chocolate Donut"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.00"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTransactionBreadQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tvTransactionBreadName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTransactionBreadName" />


    <TextView
        android:id="@+id/tvTransactionBreadPriceEach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvTransactionBreadQty"
        app:layout_constraintBottom_toBottomOf="@id/tvTransactionBreadQty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        android:text="0.00"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvTransactionBreadPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvTransactionBreadQty"
        app:layout_constraintBottom_toBottomOf="@id/tvTransactionBreadQty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        android:text="0.00"
        android:textColor="#000000"
        android:textSize="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>